*/


function starPattern(num) {    

    for( let i=1; i<=num ; i++ ) {
        var temp = ''

        for (let j=num; j>i; j--) {
            temp += ' '
        }
        for (let k=1; k<=i ; k++) {
            temp += '* '
        }  
        console.log(temp)
    }

}

starPattern(8)
